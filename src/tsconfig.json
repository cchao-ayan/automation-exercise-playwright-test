{
  /**
   * TypeScript configuration for Playwright test automation project.
   * Configures TypeScript compiler to handle modern JavaScript syntax,
   * strict type checking, and Playwright test framework types.
   */
  "compilerOptions": {
    // Output ES2020 (modern JavaScript) - supported by all modern browsers
    "target": "ES2020",

    // Use CommonJS module system - compatible with Node.js and Playwright test runner
    "module": "CommonJS",

    // Include ES2020 standard library and DOM types for browser automation
    "lib": ["ES2020", "DOM"],

    // Enable strict type checking for better code quality and fewer runtime errors
    "strict": true,

    // Use Node.js module resolution strategy
    "moduleResolution": "node",

    // Enable ES module/CommonJS interoperability
    "esModuleInterop": true,

    // Allow importing JSON files directly
    "resolveJsonModule": true,

    // Skip type checking of declaration files for faster compilation
    "skipLibCheck": true,

    // Force consistent casing in file references
    "forceConsistentCasingInFileNames": true,

    // Output compiled JavaScript to dist/ folder (optional, Playwright doesn't use this)
    "outDir": "dist",

    // Include type definitions for Node.js and @playwright/test
    "types": ["node", "@playwright/test"]
  },

  // Include all TypeScript files in the project
  "include": ["src", "tests", "**/*.ts"],

  // Exclude node_modules and dist from compilation
  "exclude": ["node_modules", "dist"]
}
