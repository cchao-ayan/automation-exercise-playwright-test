# Environment Configuration Example
# Copy this file to config/.env and fill in your actual values

# Set to "true" when running in CI/CD pipelines (GitHub Actions, Jenkins, etc.)
# This enables: retries (2x), headless mode, single worker, strict test.only checks
CI=false

# Base URL for the application under test
# Used by Playwright as default URL for page.goto() calls
BASE_URL=https://automationexercise.com/

# Optional: Set to "true" to run tests in headless mode locally
# (Set to "false" to see the browser window during test execution)
PLAYWRIGHT_HEADLESS=false

# Optional: Debug mode - set to "true" to pause on debugger breakpoints
# Run tests with: npm run test:debug
DEBUG=false
